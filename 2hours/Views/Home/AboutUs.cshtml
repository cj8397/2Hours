    ViewBag.Title = "AboutUs";
}

<body>
    <h1>About Us</h1>
    <section id="company-profile">
        <h2>Company Profile</h2>
        <p>
            2 hours is a Canadian company committed to providing fresh food in 2 hours. We aim to satisfy the needs of busy students, full-time employees
            and locals with an appreciation for the local community.
        </p>
    </section>
    <section id="company-mission">
        <h2>Our Mission</h2>
        <p>
            To provide our customers with a unique service while satisfying their needs.
        </p>
    </section>
    <section id="shop-local">
        <header>
            <h2>Video: Why Shop Local?</h2>
        </header>
